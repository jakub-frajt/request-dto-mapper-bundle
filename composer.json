{
    "name": "jakub-frajt/request-dto-mapper-bundle",
    "description": "Symfony bundle for processing requests - validation, mapping to DTO objects.",
    "type": "symfony-bundle",
    "version": "1.0.0",
    "require": {
        "php": ">=8.1",
        "symfony/config": "^6.3",
        "symfony/dependency-injection": "^6.3",
        "symfony/http-kernel": "^6.3",
        "symfony/serializer": "^6.3",
        "symfony/validator": "^6.3"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "JakubFrajt\\RequestDtoMapperBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JakubFrajt\\RequestDtoMapperBundle\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Jakub Frajt",
            "email": "mail@jakubfrajt.cz"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.11",
        "php-parallel-lint/php-parallel-lint": "^1.4",
        "phpstan/phpstan-phpunit": "^1.4",
        "symfony/framework-bundle": "^6.3"
    },
    "scripts": {
        "phpstan": "php vendor/bin/phpstan analyse",
        "test:unit": "php vendor/bin/phpunit --testsuite unit"
    }
}
